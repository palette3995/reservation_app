<div>
   <h1>予約済みルーム一覧</h1>
    <table class="table">
      <thead>
        <tr>
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>合計料金</th>
          <th>開始日</th>
          <th>終了日</th>
          <th>予約確定日時</th>
        </tr>
      </thead>

      <tbody class="room-index">
        <% @reservations.each do |reservation| %>
          <tr>
            <td><%= image_tag reservation.room.image.url, size: "240x140", class: 'reservation_image' %></td>
            <td><%= link_to reservation.room.room_name,room_path(reservation.room.id) %></td>
            <td><%= reservation.room.room_introduction %></td>
            <td>¥<%= reservation.total_amount %></td>
            <td><%= reservation.check_in.strftime('%Y年%m月%d日') %></td>
            <td><%= reservation.check_out.strftime('%Y年%m月%d日') %></td>
            <td><%= reservation.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
