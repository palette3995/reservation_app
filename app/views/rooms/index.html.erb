<h1>登録済みルーム一覧</h1>
<% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
<% end %>

   <table class="table">
     <thead>
       <tr>
         <th>ルーム画像</th>
         <th>ルーム名</th>
         <th>ルーム紹介</th>
         <th>料金</th>
         <th>作成日</th>
         <th>編集</th>
         <th>削除</th>
       </tr>
     </thead>

     <tbody class="room-index">
       <% @rooms.each do |room| %>
         <tr>
           <td><%= image_tag room.image.url, size: "240x140" %></td>
           <td><%= room.room_name %></td>
           <td><%= room.room_introduction %></td>
           <td><%= room.price %></td>
           <td><%= room.created_at %></td>
           <td><%= link_to "編集", edit_room_path(room.id) %></td>
           <td><%= link_to "削除", room_path(room.id), method: :delete %></td>
         </tr>
       <% end %>
     </tbody>
   </table>
